		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/uima/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>contrib/uima/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/velocity/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>contrib/velocity/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/solrj/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>dist/solrj-lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/test-framework/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>dist/test-framework/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/</directory>
		  <includes>
			<include>**/*.txt</include>
		  </includes>
		  <excludes>
			<exclude>**/solrj/</exclude>
			<exclude>**/test-framework/</exclude>
			<exclude>**/core/</exclude>
		  </excludes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/example</directory>
		  <includes>
			<include>**/*</include>
		  </includes>
		  <excludes>
			<exclude>**/ivy.xml</exclude>
			<exclude>**/build.xml</exclude>
			<exclude>**/*.txt</exclude>
		  </excludes>
			<outputDirectory>example</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
