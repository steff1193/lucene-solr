	<id>solr-install</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${basedir}/lucene/analysis/icu/target/lucene-analyzers-icu-${project.version}.jar</source>
			<outputDirectory>contrib/analysis-extras/lucene-libs</outputDirectory>
        </file>
        <file>
            <source>${basedir}/lucene/analysis/morfologik/target/lucene-analyzers-morfologik-${project.version}.jar</source>
			<outputDirectory>contrib/analysis-extras/lucene-libs</outputDirectory>
        </file>
        <file>
            <source>${basedir}/lucene/analysis/smartcn/target/lucene-analyzers-smartcn-${project.version}.jar</source>
			<outputDirectory>contrib/analysis-extras/lucene-libs</outputDirectory>
        </file>
        <file>
            <source>${basedir}/lucene/analysis/stempel/target/lucene-analyzers-stempel-${project.version}.jar</source>
			<outputDirectory>contrib/analysis-extras/lucene-libs</outputDirectory>
        </file>
        <file>
            <source>${basedir}/../lucene/analysis/icu/lib/icu4j-49.1.jar</source>
			<outputDirectory>contrib/analysis-extras/lib</outputDirectory>
        </file>
        <file>
            <source>${basedir}/../lucene/build/analysis/uima/lucene-analyzers-uima-${project.version}.jar</source>
			<outputDirectory>contrib/uima/lucene-libs</outputDirectory>
        </file>

        <file>
            <source>${basedir}/solr/webapp/build/solr-${project.version}.war</source>
