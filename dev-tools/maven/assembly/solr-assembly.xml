        </file>
        <file>
            <source>${basedir}/solr/contrib/uima/target/solr-uima-${project.version}.jar</source>
            <destName>apache-solr-uima-${project.version}.jar</destName>
			<outputDirectory>dist</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/contrib/velocity/target/solr-velocity-${project.version}.jar</source>
            <destName>apache-solr-velocity-${project.version}.jar</destName>
