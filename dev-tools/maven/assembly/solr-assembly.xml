        <file>
            <source>${basedir}/lucene/test-framework/target/lucene-test-framework-${project.version}.jar</source>
			<outputDirectory>dist/test-framework/lucene-libs</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/webapp/build/solr-${project.version}.war</source>
            <destName>solr.war</destName>
			<outputDirectory>example/webapps</outputDirectory>
        </file>

    </files>
	<fileSets>
		<fileSet>
		  <directory>${basedir}/../lucene/analysis/morfologik/lib</directory>
		  <includes>
			<include>**/morfologik*.jar</include>
		  </includes>
			<outputDirectory>contrib/analysis-extras/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/clustering/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>contrib/clustering/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/dataimporthandler/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>contrib/dataimporthandler/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/extraction/lib</directory>
		  <includes>
			<include>**/*.jar</include>
		  </includes>
			<outputDirectory>contrib/extraction/lib</outputDirectory>
		</fileSet>
		<fileSet>
		  <directory>${basedir}/../solr/contrib/langid/lib</directory>
		  <includes>
			<include>**/*.jar</include>
