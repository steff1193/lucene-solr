        </file>
        <file>
            <source>${basedir}/solr/contrib/analysis-extras/target/solr-analysis-extras-${project.version}.jar</source>
            <destName>apache-solr-analysis-extras-${project.version}.jar</destName>
			<outputDirectory>dist</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/contrib/extraction/target/solr-cell-${project.version}.jar</source>
