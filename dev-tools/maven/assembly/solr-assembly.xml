            <source>${basedir}/solr/contrib/dataimporthandler-extras/target/solr-dataimporthandler-extras-${project.version}.jar</source>
            <destName>apache-solr-dataimporthandler-extras-${project.version}.jar</destName>
			<outputDirectory>dist</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/contrib/langid/target/solr-langid-${project.version}.jar</source>
            <destName>apache-solr-langid-${project.version}.jar</destName>
			<outputDirectory>dist</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/solrj/src/java/target/solr-solrj-${project.version}.jar</source>
            <destName>apache-solr-solrj-${project.version}.jar</destName>
			<outputDirectory>dist</outputDirectory>
        </file>
        <file>
            <source>${basedir}/solr/test-framework/target/solr-test-framework-${project.version}.jar</source>
